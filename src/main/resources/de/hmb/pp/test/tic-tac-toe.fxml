<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<GridPane fx:id="root" xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" hgap="10" vgap="10" fx:controller="de.hmb.pp.test.TicTacToe">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="titleLabel" text="Tic-Tac-Toe" style="-fx-font-size: 24px; -fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="0"  />

    <GridPane fx:id="boardGrid" alignment="CENTER" hgap="10" vgap="10" GridPane.columnIndex="0" GridPane.rowIndex="1" >
        <Button fx:id="button00" text="" prefWidth="100" prefHeight="100" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <Button fx:id="button01" text="" prefWidth="100" prefHeight="100" GridPane.rowIndex="0" GridPane.columnIndex="1" />
        <Button fx:id="button02" text="" prefWidth="100" prefHeight="100" GridPane.rowIndex="0" GridPane.columnIndex="2" />

        <Button fx:id="button10" text="" prefWidth="100" prefHeight="100" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <Button fx:id="button11" text="" prefWidth="100" prefHeight="100" GridPane.rowIndex="1" GridPane.columnIndex="1" />
        <Button fx:id="button12" text="" prefWidth="100" prefHeight="100" GridPane.rowIndex="1" GridPane.columnIndex="2" />

        <Button fx:id="button20" text="" prefWidth="100" prefHeight="100" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <Button fx:id="button21" text="" prefWidth="100" prefHeight="100" GridPane.rowIndex="2" GridPane.columnIndex="1" />
        <Button fx:id="button22" text="" prefWidth="100" prefHeight="100" GridPane.rowIndex="2" GridPane.columnIndex="2" />
    </GridPane>

    <Button fx:id="restartButton" text="Restart Game" onAction="#resetGame" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <Button fx:id="undoButton" text="Undo" onAction="#undo" GridPane.columnIndex="0" GridPane.rowIndex="4" />

    <Label fx:id="statusLabel" text="" style="-fx-font-size: 18px; -fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="2" />

</GridPane>
